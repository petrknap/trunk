{
    "name": "petrknap/php",
    "description": "Monolithic repository for petrknap/php-* packages",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/petrknap/php",
    "authors": [
        {
            "name": "Petr Knap",
            "email": "dev@petrknap.cz"
        }
    ],
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "petrknap/php-enum": "dev-master",
        "petrknap/php-singleton": "dev-master"
    },
    "autoload-dev": {
        "psr-4": {
            "PetrKnap\\Php\\Enum\\Test\\": "packages/Enum/tests/Enum",
            "PetrKnap\\Php\\Singleton\\Test\\": "packages/Singleton/tests/Singleton"
        }
    }
}
