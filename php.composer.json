{
    "name": "petrknap/php",
    "type": "project",
    "license": "MIT",
    "homepage": "https://petrknap.github.io/docs/",
    "authors": [
        {
            "name": "Petr Knap",
            "email": "dev@petrknap.cz"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "./packages/Php/*"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "petrknap/php-enum": "*",
        "petrknap/php-migrationtool": "*",
        "petrknap/php-profiler": "*",
        "petrknap/php-singleton": "*",
        "petrknap/php-splitfilesystem": "*"
    },
    "autoload": {
        "psr-4": {
            "PetrKnap\\Php\\Enum\\": "packages/Php/Enum/src",
            "PetrKnap\\Php\\MigrationTool\\": "packages/Php/MigrationTool/src",
            "PetrKnap\\Php\\Profiler\\": "packages/Php/Profiler/src",
            "PetrKnap\\Php\\Singleton\\": "packages/Php/Singleton/src",
            "PetrKnap\\Php\\SplitFilesystem\\": "packages/Php/SplitFilesystem/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PetrKnap\\Php\\Enum\\Test\\": "packages/Php/Enum/tests",
            "PetrKnap\\Php\\MigrationTool\\Test\\": "packages/Php/MigrationTool/tests",
            "PetrKnap\\Php\\Profiler\\Test\\": "packages/Php/Profiler/tests",
            "PetrKnap\\Php\\Singleton\\Test\\": "packages/Php/Singleton/tests",
            "PetrKnap\\Php\\SplitFilesystem\\Test\\": "packages/Php/SplitFilesystem/tests"
        }
    }
}
