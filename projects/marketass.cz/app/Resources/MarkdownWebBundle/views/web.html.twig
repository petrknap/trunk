{% extends "@MarkdownWeb/layout.html.twig" %}

{% block menu %}
    {{ render_index("@MarkdownWeb/menu.html.twig", {"|layout": ["web.html", "web.gallery.html"], "!priority": 0}, "priority:asc") }}
{% endblock %}

{% block content %}
    {% if page.jumbotron is defined %}
        <h1 class="hidden">{{ page.title }}</h1>
    {% else %}
        <div class="well well-header">
            <h1>{{ page.title }}</h1>
        </div>
    {% endif %}
    {{ content|raw }}
{% endblock %}
